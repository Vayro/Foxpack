<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FrameActivity">


    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="600dp"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/toSchedFrag"
                style="@style/Widget.MaterialComponents.Button"
                android:drawableTop="@drawable/ic_baseline_calendar_today_24"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="?android:attr/windowBackground"
                android:text="View Schedule"

                />

            <Button
                android:id="@+id/mainMenuButt"
                android:layout_width="0dp"
                android:drawableTop="@drawable/ic_baseline_home_24"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:attr/windowBackground"
                android:text="Main Menu" />

            <Button
                android:id="@+id/addWorkoutFrag"
                style="@style/Widget.MaterialComponents.Button"
                android:drawableTop="@drawable/ic_baseline_add_24"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="?android:attr/windowBackground"
                android:text="New workout"

                />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        </TableRow>

    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>